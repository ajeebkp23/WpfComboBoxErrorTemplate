<Window x:Class="WpfComboBoxErrorTemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfComboBoxErrorTemplate"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="800">
    <TabControl>
        <TabItem Header="ComboBox with Exception">
            <local:ComboBoxWithException />
        </TabItem>
        <TabItem Header="ComboBox with INotifyDataErrorInfo">
            <local:ComboBoxWithCustomValidationRule />
        </TabItem>
        <TabItem Header="ComboBox with ValidationRule"></TabItem>
    </TabControl>
</Window>
